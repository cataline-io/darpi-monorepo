{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["dist", "node_modules"],
  "rules": {
    "no-control-regex": "off",
    "no-useless-escape": "off",
    "space-before-function-paren": "off"
  }
}
