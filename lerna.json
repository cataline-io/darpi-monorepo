{
  "version": "1.0.2",
  "npmClient": "npm",
  "command": {
    "publish": {
      "npmClientArgs": [
        "--ignore-prepublish"
      ],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock",
        "--ignore-scripts"
      ]
    }
  },
  "packages": [
    "packages/*"
  ]
}
